<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/recommendthehost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="7dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_head_live"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:text="推荐直播"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:drawablePadding="7dp"
            android:drawableRight="@drawable/ic_group_discover_more_grey"
            android:text="当前666个主播"
            android:textSize="18sp" />
    </LinearLayout>

    <gjw.bibi.view.MyGridView
        android:id="@+id/gv_recommendhost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="5">

    </gjw.bibi.view.MyGridView>


</LinearLayout>