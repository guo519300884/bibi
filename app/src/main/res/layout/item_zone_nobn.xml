<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/zone_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_areas_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="7dp"
            android:src="@drawable/ic_file_download_black_24dp" />

        <TextView
            android:id="@+id/tv_areas_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="25513.1.1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/goin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:text="进去看看"
            android:textColor="@color/white" />


    </LinearLayout>

    <gjw.bibi.view.myview.MyGridView
        android:id="@+id/gv_zone_region"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2"></gjw.bibi.view.myview.MyGridView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/item_live_layout"
            app:cardBackgroundColor="@color/card_view_background"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <Button
                android:id="@+id/btn_areas_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="查看更多"
                android:textSize="18sp" />
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_areas_content_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_refresh_pink"
            android:gravity="center_vertical"
            android:text="4545168"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>