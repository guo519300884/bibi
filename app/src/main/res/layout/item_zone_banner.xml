<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/zone_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_areas_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:src="@drawable/ic_header_topic" />

        <TextView
            android:id="@+id/tv_areas_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="25513.1.1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/goin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:text="进去看看"
            android:textColor="@color/white" />
    </LinearLayout>


    <com.youth.banner.Banner
        android:id="@+id/bn_zone_topic"
        android:layout_width="match_parent"
        android:layout_height="160dp"></com.youth.banner.Banner>

</LinearLayout>